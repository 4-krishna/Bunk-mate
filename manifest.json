{
  "manifest_version": 3,
  "name": "Bunk Mate",
  "version": "2.1.0",
  "description": "Smart attendance manager with auto-detection and bunk calculator for TCS iON portal",
  "author": "devag7 (https://github.com/devag7)",
  "homepage_url": "https://github.com/devag7/bunk-mate",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "*://*.tcsondemand.com/*",
    "*://*.ion.digitalacademy.tcs.com/*",
    "*://*.tcs.com/*",
    "*://*.tcsonlineadvocacy.com/*",
    "*://*.fresco.tcs.com/*",
    "*://ion.digitalacademy.tcs.com/*",
    "*://*.tcsion.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.tcsondemand.com/*",
        "*://*.ion.digitalacademy.tcs.com/*",
        "*://*.tcs.com/*",
        "*://*.tcsonlineadvocacy.com/*",
        "*://*.fresco.tcs.com/*",
        "*://ion.digitalacademy.tcs.com/*",
        "*://*.tcsion.com/*"
      ],
      "js": ["src/scripts/content.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "48": "src/assets/icon48.png",
    "128": "src/assets/icon128.png"
  }
}