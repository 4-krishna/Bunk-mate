{
  "manifest_version": 3,
  "name": "Bunk Mate",
  "version": "1.2.0",
  "description": "A minimalist attendance calculator with TCS iON auto-detection to help students track their attendance",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "*://*.tcsondemand.com/*",
    "*://*.ion.digitalacademy.tcs.com/*",
    "*://*.tcs.com/*",
    "*://*.tcsonlineadvocacy.com/*",
    "*://*.fresco.tcs.com/*",
    "*://ion.digitalacademy.tcs.com/*",
    "*://*.tcsion.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.tcsondemand.com/*",
        "*://*.ion.digitalacademy.tcs.com/*",
        "*://*.tcs.com/*",
        "*://*.tcsonlineadvocacy.com/*",
        "*://*.fresco.tcs.com/*",
        "*://ion.digitalacademy.tcs.com/*",
        "*://*.tcsion.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    {
      "resources": ["test-page-enhanced.html"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  }
}